<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <!-- configuration -->
        <service id="ost_listing_filter.configuration" class="OstFoundation\Services\ConfigurationService">
            <factory service="ost_foundation.services.configuration_service" method="getConfig"/>
            <argument type="string">OstListingFilter</argument>
        </service>

        <!-- frontend controller listeners -->
        <service id="ost_listing_filter.listeners.controllers.frontend.detail.pre_dispatch" class="OstListingFilter\Listeners\Controllers\Frontend\Listing">
            <argument type="string">%ost_listing_filter.view_dir%</argument>
            <tag name="shopware.event_listener" method="onPreDispatch" event="Enlight_Controller_Action_PreDispatch_Frontend_Listing" />
        </service>

        <service id="ost_listing_filter.listeners.controllers.frontend.search.pre_dispatch" class="OstListingFilter\Listeners\Controllers\Frontend\Search">
            <argument type="string">%ost_listing_filter.view_dir%</argument>
            <tag name="shopware.event_listener" method="onPreDispatch" event="Enlight_Controller_Action_PreDispatch_Frontend_Search" />
        </service>

    </services>
</container>
